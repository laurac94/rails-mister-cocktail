<h1 class="text-underline"> <%= @cocktail.name %> </h1>
<h2>Dosis -- Ingredients</h2>

<br>

<% @cocktail.doses.each do |dose| %>
<%= dose.description %>

<%= dose.ingredient.name %>

<%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
<i class="fa fa-trash destroy_dose"></i>
<% end %>
<br>
<% end %>
<br>
<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail, @dose) %>
<br>
<%= link_to "Go back", cocktails_path  %>
